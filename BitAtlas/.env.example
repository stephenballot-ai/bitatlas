# BitAtlas Environment Configuration

# Database
DATABASE_URL=postgresql://bitatlas:password@localhost:5432/bitatlas
DB_HOST=localhost
DB_PORT=5432
DB_USER=bitatlas
DB_PASSWORD=password
DB_NAME=bitatlas

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth
OAUTH_CLIENT_ID=bitatlas-client
OAUTH_CLIENT_SECRET=your-oauth-client-secret

# Storage (European Providers)
STORAGE_PROVIDER=local # ovh, scaleway, hetzner
OVH_APPLICATION_KEY=
OVH_APPLICATION_SECRET=
OVH_CONSUMER_KEY=
OVH_REGION=eu-west-1

SCALEWAY_ACCESS_KEY=
SCALEWAY_SECRET_KEY=
SCALEWAY_REGION=fr-par

HETZNER_ACCESS_KEY=
HETZNER_SECRET_KEY=
HETZNER_REGION=eu-central

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-files
ENCRYPTION_ALGORITHM=aes-256-gcm

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# GDPR Compliance
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# Development
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Monitoring (for production)
PROMETHEUS_ENABLED=false
GRAFANA_URL=
LOG_LEVEL=info

# European Data Residency
DATA_RESIDENCY_REGION=EU
ALLOWED_COUNTRIES=AT,BE,BG,CY,CZ,DE,DK,EE,ES,FI,FR,GR,HR,HU,IE,IT,LT,LU,LV,MT,NL,PL,PT,RO,SE,SI,SK
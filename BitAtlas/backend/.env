# BitAtlas Backend Environment Configuration - Development

# Database
DATABASE_URL=postgresql://bitatlas:password@localhost:5432/bitatlas
DB_HOST=localhost
DB_PORT=5432
DB_USER=bitatlas
DB_PASSWORD=password
DB_NAME=bitatlas

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=development-jwt-secret-change-in-production-128-characters-long-for-security
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=30d

# Server
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# GDPR Compliance
DATA_RETENTION_DAYS=2555  # 7 years
AUDIT_LOG_RETENTION_DAYS=2555

# European Data Residency
DATA_RESIDENCY_REGION=EU
ALLOWED_COUNTRIES=AT,BE,BG,CY,CZ,DE,DK,EE,ES,FI,FR,GR,HR,HU,IE,IT,LT,LU,LV,MT,NL,PL,PT,RO,SE,SI,SK

# Development Settings
LOG_LEVEL=info